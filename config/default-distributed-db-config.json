{
  "autoDeploy": true,
  "hotAlignment": false,
  "executionMode": "asynchronous",
  "readQuorum": 1,
  "writeQuorum": 1,
  "failureAvailableNodesLessQuorum": false,
  "readYourWrites": true,
  "newNodeStrategy": "dynamic",
  "servers": {
    "{{ template "getmesh.fullname" . }}-master-0": "master",
    "{{ template "getmesh.fullname" . }}-master-0@{{ template "getmesh.version.slug" . }}": "master",
    "*": "replica"
  },
  "clusters": {
    "internal": {
    },
    "*": {
      "servers": ["<NEW_NODE>"]
    }
  }
}
